{
  "compilerOptions": {
      "target": "es6",
      "noEmitOnError": true,
      "noImplicitAny": true,
      "allowJs": true,
      "strict": true,
      "lib": [
          "es6",
          "DOM"
      ],
      "outDir": "dist/js",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
      "*": ["node_modules/*", "src/*"]
      }
  },
  "include" : ["src/**/*","app/**/*"]
}